                        <div class="menus d-flex ftco-animate" style="margin-left: 45px">
                            <div class="menu-img img" style="background-image: url(../images/person_4.jpg);"></div>
                            <div class="text">
                                <div class="d-flex">
                                    <div class="one-half">
                                        <h3><input
                                                style="color: black;background-color: rgba(255,255,255,0);border: 0;width: 250px;text-overflow: ellipsis; "
                                                type="text" name="fullnameclient" value='{{this.fullname}}' readonly>
                                        </h3>
                                    </div>
                                </div>
                                <p><input
                                        style="color: black;background-color: rgba(255,255,255,0);border: 0;width: 250px;text-overflow: ellipsis;"
                                        type="text" name="addressclent" value='{{this.address}}' readonly></p>
                                <p><input
                                        style="color: black;background-color: rgba(255,255,255,0);border: 0;width: 220px;text-overflow: ellipsis;"
                                        type="text" name="sdtclient" value='{{this.sdt}}' readonly></p>
                                <p><input
                                        style="color: black;background-color: rgba(255,255,255,0);border: 0;width: 220px;text-overflow: ellipsis;"
                                        type="text" name="passclient" value='{{this.pass}}' readonly></p>
                                <p><input
                                        style="color: black;background-color: rgba(255,255,255,0);border: 0;width: 220px;text-overflow: ellipsis;"
                                        type="hidden"
                                        name="idclient" value='{{this._id}}' readonly></p>

                                <div class="d-flex">
                                    <div>
                                        <button type="submit" class="btn btn-success edit" formaction="/updateClient">
