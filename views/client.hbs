                                    </div>
                                    <div>
                                        <button type="submit" class="btn btn-danger edit" formaction="/deleteClient"
                                                onclick="return confirm('Xóa dữ liệu!')">Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                {{/each}}



